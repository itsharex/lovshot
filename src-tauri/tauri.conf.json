{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "lovshot",
  "identifier": "app.lovpen.shot",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:51215",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Lovshot Dashboard",
        "width": 800,
        "height": 600,
        "resizable": true,
        "center": true,
        "minWidth": 320,
        "minHeight": 400
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
